<%= form_for @user  do |f| %>
  <%= f.label :Your_Username_Here %>
  <%= f.text_field :username, placeholder: "John Doe" %><br>
  <%= f.label :Email %>
  <%= f.email_field :email, placeholder: "example@example.com" %><br>
  <%= f.label :Password %>
  <%= f.password_field :password, placeholder: "password" %><br>
  <%= f.submit 'Edit User!' %>
<% end %>